{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "preserveConstEnums": true,
        "rootDir": "./src/",
        "outDir": "dist",
        "newLine": "LF",
        "experimentalDecorators": true,
        "sourceMap": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        // "strictBindCallApply": true,
        // "diagnostics": true,
        "baseUrl": ".",
        "paths": {
            "sfn": [
                "."
            ]
        }
    },
    "include": [
        "src/*.ts",
        "src/controllers/*.ts",
        "src/bootstrap/*.ts",
        "src/services/*.ts",
        "src/locales/*.ts",
        "src/hooks/*.ts",
        "src/models/*.ts",
        "src/utils/*.ts",
        "src/core/*/*.ts",
        "src/core/*/*/*.ts",
        "src/cli/*.ts"
    ]
}
